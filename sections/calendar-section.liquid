{{ 'calendar_section.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    .calendar-section {
        background-color: {{ section.settings.color_bg }};
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
{%- endstyle -%}

<div class="calendar-section">
    <div class="page-width section-{{ section.id }}-padding">
        <h2 class="title">{{ section.settings.title }}</h2>
        <div class="calendar-wrap swiper">

            {%- for block in section.blocks -%}
                <div class="calendar-column {% if block.settings.has_label %} sale-label{% endif %}">
                    <div class="day-title">{{ block.settings.day_title }}</div>

                    <div class="day-info-wrap">
                        <div class="day-date">{{ block.settings.date }}</div>

                        <div class="info-wrap">
                            <div class="info">{{ block.settings.break_info }}</div>
                            <div class="time-info">{{ block.settings.time_info }}</div>

                            <div class="info">{{ block.settings.break_info_2 }}</div>
                            <div class="time-info">{{ block.settings.time_info_2 }}</div>

                            <div class="info">{{ block.settings.break_info_3 }}</div>
                            <div class="time-info">{{ block.settings.time_info_3 }}</div>
                        </div>

                        <a href="{{ block.settings.link }}" class="button button--primary">{{ block.settings.button_name }}</a>
                    </div>

                </div>
            {%- endfor -%}
        </div>
    </div>
</div>

{% schema %}

{
    "name": "Calendar section",
    "settings": [
        {
            "type": "inline_richtext",
            "id": "title",
            "default": "Title",
            "label": "Title"
        },
        {
            "type": "color",
            "id": "color_bg",
            "label": "Section background",
            "default": "#ffffff"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 20
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 20
        }
    ],
    "blocks": [
        {
            "type": "day",
            "name": "Column name",
            "settings": [
                {
                    "type": "text",
                    "id": "day_title",
                    "label": "Day name"
                },
                {
                    "type": "checkbox",
                    "id": "has_label",
                    "label": "Column has sale label"
                },
                {
                    "type": "text",
                    "id": "date",
                    "label": "Date"
                },
                {
                    "type": "text",
                    "id": "break_info",
                    "label": "Info 1"
                },
                {
                    "type": "text",
                    "id": "time_info",
                    "label": "Time info 1"
                },
                {
                    "type": "text",
                    "id": "break_info_2",
                    "label": "Info 2"
                },
                {
                    "type": "text",
                    "id": "time_info_2",
                    "label": "Time info 2"
                },
                {
                    "type": "text",
                    "id": "break_info_3",
                    "label": "Info 3"
                },
                {
                    "type": "text",
                    "id": "time_info_3",
                    "label": "Time info 3"
                },
                {
                    "type": "text",
                    "id": "button_name",
                    "label": "Button label"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Button link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Calendar section",
            "blocks": [
                {
                    "type": "day"
                },
                {
                    "type": "day"
                },
                {
                    "type": "day"
                }
            ]
        }
    ]
}
{% endschema %}
